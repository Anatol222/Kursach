<Window x:Class="Курсовая.PagesRegistration.AgreementPolicy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Top="200"
        Left="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="AgreementPolicy" Height="450" Width="450">
    <Border CornerRadius="50" Background="#d8edf0" BorderBrush="LightGreen" BorderThickness="2">
        <Grid>
            <ScrollViewer Margin="10,25,10,26">
                <StackPanel>
                    <TextBlock x:Name="AgrPolicy" TextWrapping="Wrap" Margin="10,10,10,34"></TextBlock>
                    <Button x:Name="Confirm" Style="{DynamicResource ButtonStyle}"  Content="Подтвердить" Click="Confirm_Click" Width="144" Height="34"/>
                    <Button x:Name="Cancellation" Style="{DynamicResource ButtonStyle}"  Content="Отмена" Click="Cancellation_Click" Width="144" Height="35"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
