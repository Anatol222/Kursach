<Window x:Class="Курсовая.Setting.SaveNewUserData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая.Setting"
        mc:Ignorable="d"
        Top="200"
        Left="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="SaveNewUserData" Height="200" Width="400">
    <Border CornerRadius="20" Background ="{StaticResource PrimaryBackgroundColor}" BorderBrush="Gray" BorderThickness="1">
        <Grid Background="Transparent">
            <Border>
                <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" x:Name="NotificationBox" Width="Auto" Margin="10,0,10,44"/>
            </Border>
            <Button Style="{DynamicResource ButtonStyle}" x:Name="Confirm" Click="Confirm_Click" Height="40" Width="150" Margin="213,135,35,23"/>
            <Button Content="Отмена" Style="{DynamicResource ButtonStyle}" x:Name="Cancellation" Click="Cancellation_Click" Height="40" Width="150" Margin="35,135,213,23"/>
        </Grid>
    </Border>
</Window>
