<Window x:Class="Курсовая.ConfirmEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Top="200"
        Left="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="ConfirmEmail" Height="450" Width="400">
    <Border CornerRadius="50" Background="#d8edf0" BorderBrush="LightGreen" BorderThickness="2">
        <Grid Margin="2,-8,-2,8">
            <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Text="Подтвердите адресс эл. почты" Margin="0,22,0,0" VerticalAlignment="Top" Height="28" Width="240"/>
            <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Text="Введите код подтверждения" Margin="0,55,0,0" VerticalAlignment="Top"/>
            <Label x:Name="TextInfo" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,93,0,0"/>
            <Border Style="{DynamicResource BorderStyle}" BorderBrush="LightGreen" BorderThickness="1.5" MinWidth="10" Margin="98,161,0,0" Width="34">
                <TextBox Style="{DynamicResource TextNew}" MinWidth="10" x:Name="FirstSymbol" Foreground="Black" TextChanged="ChangeFocus_TextChanged"></TextBox>
            </Border>
            <Border Style="{DynamicResource BorderStyle}" BorderBrush="LightGreen" BorderThickness="1.5" MinWidth="10" Margin="136,161,0,0" Width="34">
                <TextBox Style="{DynamicResource TextNew}" MinWidth="10" x:Name="SecondSymbol" Foreground="Black" TextChanged="ChangeFocus_TextChanged"></TextBox>
            </Border>
            <Border Style="{DynamicResource BorderStyle}" BorderBrush="LightGreen" BorderThickness="1.5" MinWidth="10" Margin="176,161,0,0" Width="34">
                <TextBox Style="{DynamicResource TextNew}" MinWidth="10" x:Name="ThirdSymbol" Foreground="Black" TextChanged="ChangeFocus_TextChanged"></TextBox>
            </Border>
            <Border Style="{DynamicResource BorderStyle}" BorderBrush="LightGreen" BorderThickness="1.5" MinWidth="10" Margin="214,161,0,0" Width="34">
                <TextBox Style="{DynamicResource TextNew}" MinWidth="10" x:Name="FourthSymbol" Foreground="Black" TextChanged="ChangeFocus_TextChanged" ></TextBox>
            </Border>
            <Border Style="{DynamicResource BorderStyle}" BorderBrush="LightGreen" BorderThickness="1.5" MinWidth="10" Margin="254,161,0,0" Width="34">
                <TextBox Style="{DynamicResource TextNew}" MinWidth="10" x:Name="FifthSymbol" Foreground="Black"></TextBox>
            </Border>

            <Button Content="Отправить ещё раз" Click="SendAgain_Click" Margin="52,193,218,223"/>
            <TextBlock Text="Обновить электронный адресс:" Margin="31,228,186,194"/>

            <Button Foreground="Blue" FontStyle="Italic" FontSize="12" Click="ReturnRegistr_Click" Style="{DynamicResource ButtonStyle}" Content="Перейти к регистрации" Focusable="False" Margin="198,221,34,196" Background="#00000000"></Button>
            <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Text="Добавление резервной почты" Margin="74,250,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="ReserveInfo" Margin="10,269,10,0" Height="98" VerticalAlignment="Top"/>
            <Border Style="{DynamicResource BorderStyle}" Margin="83,330,0,0" Width="220">
                <TextBox Style="{DynamicResource TextNew}" ToolTip="Это поле является необязательным параметром" x:Name="EmailReserve" Text="Введите резервную эл. почту" Width="200" ></TextBox>
            </Border>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="198,374,54,12"/>
            <Button Content="Отмена" Click="Cancellation_Click" Margin="53,372,233,10"/>
        </Grid>
    </Border>
</Window>
