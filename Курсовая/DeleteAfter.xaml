<Page x:Class="Курсовая.DeleteAfter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteAfter">

    <Grid Background="White">
        <TextBlock Name="RealTime" FontSize="24" FontStyle="Normal" FontFamily="Bold" Foreground="Black" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Background="Gray"  Margin="400,400,0,0" />
        <TextBlock Name="WeatherShow" FontSize="24" FontStyle="Normal" FontFamily="Bold"  Foreground="Black" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Background="Gray" Margin="554,346,0,0" Width="206" Height="104" />
        <!--<TextBlock Name="TimerCode" FontSize="24" FontStyle="Normal" FontFamily="Bold" Foreground="Black" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Background="Gray"  Margin="100,400,0,0" />-->
        <Button Background="LightBlue" BorderBrush="Transparent" BorderThickness="0" MaxHeight="60" MaxWidth="60" Name="IconWeatherShow" Margin="458,253,281,138">
            <Image />
        </Button>
        <StackPanel>
            <Calendar Style="{x:Null}" x:Name="Calendar">
                <Calendar.BlackoutDates>
                    <CalendarDateRange x:Name="Blackout"/>
                </Calendar.BlackoutDates>
            </Calendar>
            <TextBlock Text="{Binding ElementName=Calendar, Path=SelectedDate}"></TextBlock>
        </StackPanel>
        <!--<Button x:Name="UserData" Click="UserData_Click" Margin="130,225,518,184"/>-->
    </Grid>
</Page>
