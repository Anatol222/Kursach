<Window x:Class="Курсовая.AgreementPolicy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Title="AgreementPolicy" Height="450" Width="400">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock x:Name="AgrPolicy" TextWrapping="Wrap" Margin="10,10,10,34"></TextBlock>
                <Button x:Name="Confirm" Content="Подтвердить" Click="Confirm_Click" Width="186"/>
                <Button x:Name="Cancellation" Content="Отмена" Click="Cancellation_Click" Width="186"/>
            </StackPanel>
            
        </ScrollViewer>

        
    </Grid>
</Window>
