<Page x:Class="Курсовая.MainFrameForms.HotkeysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая.MainFrameForms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1200"
      Title="HotkeysPage">
    <Border CornerRadius="10" Background="LightGray" Padding="50">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock FontSize="24" Grid.Row="0" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Left" x:Name="HotKeysnBox" Width="Auto"/>
            <Border Grid.Row="1" Width="150" Height="50" Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Content="Назад" Click="BackRtn_Click" Style="{StaticResource ButtonStyle}" Name="BackRtn" Cursor="Hand"></Button>
            </Border>
        </Grid>
    </Border>
</Page>
